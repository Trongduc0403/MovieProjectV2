@model MovieProjectV2.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="sign section--bg" data-bg="img/section/section.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="sign__content">
                    <!-- authorization form -->
                    <form class="sign__form" method="post" asp-action="Login" asp-controller="Account">
                        <a asp-controller="Home" asp-action="Index" class="sign__logo">
                            <img src="~/img/logo.svg" alt="">
                        </a>

                        <div class="sign__group">
                            <input type="text" class="sign__input" asp-for="Email" placeholder="Email"> <br />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="sign__group">
                            <input type="password" class="sign__input" asp-for="Password" placeholder="Password"> <br />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="sign__group sign__group--checkbox">
                            <input id="remember" name="remember" asp-for="RememberMe" type="checkbox" checked="checked">
                            <label for="remember" asp-for="RememberMe">Remember Me</label>
                        </div>

                        <button class="sign__btn" type="submit">Log in</button>
                        @*<input class="sign__btn" type="submit" value="Sign in" />*@

                        <span class="sign__text">Don't have an account? <a asp-action="Register">Register!</a></span>

                        <span class="sign__text"><a href="#">Forgot password?</a></span>
                    </form>
                    <!-- end authorization form -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}